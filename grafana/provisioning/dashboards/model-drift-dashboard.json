{
  "title": "Model Drift & Performance",
  "uid": "model-drift-dashboard",
  "panels": [
      {
        "id": 1,
        "title": "Data Drift Share",
        "type": "timeseries",
        "description": "Share of drifted features over time. Alert threshold > 0.3.",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "data_drift_share",
            "legendFormat": "Drift Share",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.2
                },
                {
                  "color": "red",
                  "value": 0.3
                }
              ]
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "showPoints": "auto",
              "pointSize": 5
            }
          },
          "overrides": []
        },
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "calcs": []
          }
        }
      },
      {
        "id": 2,
        "title": "Prediction Drift Status",
        "type": "stat",
        "description": "Binary indicator if prediction distribution has drifted.",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "prediction_drift_detected",
            "legendFormat": "Status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {
                    "text": "✅ STABLE",
                    "color": "green"
                  },
                  "1": {
                    "text": "⚠️ DRIFTED",
                    "color": "red"
                  }
                }
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            }
          },
          "overrides": []
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": [
              "lastNotNull"
            ],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "auto"
        }
      },
      {
        "id": 3,
        "title": "Prediction Volume",
        "type": "timeseries",
        "description": "Total vs positive prediction counts.",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "total_predictions",
            "legendFormat": "Total",
            "refId": "A"
          },
          {
            "expr": "positive_predictions",
            "legendFormat": "Positive",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 0,
              "gradientMode": "none",
              "spanNulls": false,
              "showPoints": "auto",
              "pointSize": 5
            }
          },
          "overrides": []
        },
        "options": {
          "tooltip": {
            "mode": "single"
          },
          "legend": {
            "displayMode": "list",
            "placement": "bottom",
            "calcs": []
          }
        }
      },
      {
        "id": 4,
        "title": "Positive Prediction Rate",
        "type": "stat",
        "description": "Percentage of predictions flagged as positive (churn).",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "prediction_positive_rate",
            "legendFormat": "Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.1
                },
                {
                  "color": "orange",
                  "value": 0.2
                },
                {
                  "color": "red",
                  "value": 0.3
                }
              ]
            }
          },
          "overrides": []
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": [
              "lastNotNull"
            ],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "auto"
        }
      },
      {
        "id": 5,
        "title": "Last Monitoring Run",
        "type": "stat",
        "description": "Time elapsed since the last prediction job ran.",
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "time() - last_monitoring_timestamp",
            "legendFormat": "Seconds",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 86400
                },
                {
                  "color": "orange",
                  "value": 172800
                },
                {
                  "color": "red",
                  "value": 259200
                }
              ]
            },
            "mappings": [
              {
                "type": "range",
                "options": {
                  "from": 0,
                  "to": 3600,
                  "result": {
                    "text": "Last hour"
                  }
                }
              },
              {
                "type": "range",
                "options": {
                  "from": 3600,
                  "to": 86400,
                  "result": {
                    "text": "Today"
                  }
                }
              },
              {
                "type": "range",
                "options": {
                  "from": 86400,
                  "to": 604800,
                  "result": {
                    "text": "This week"
                  }
                }
              }
            ]
          },
          "overrides": []
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": [
              "lastNotNull"
            ],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto"
        }
      }
    ],
  "time": {"from": "now-6h", "to": "now"},
  "refresh": "30s",
  "schemaVersion": 37,
  "version": 1
}
